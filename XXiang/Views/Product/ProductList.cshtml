@model IEnumerable<XXiang.Models.TProduct>

@{
    ViewData["Title"] = "ProductList";
}

<h1>ProductList</h1>

<p>
    <a asp-action="ProductCreate">註冊商品名稱</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SupplierId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SupplierId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("編輯修改", "ProductEdit", new { id=item.ProductId }) |
                @Html.ActionLink("新增站點", "PSiteList", new { id=item.ProductId }) |
                @Html.ActionLink("刪除", "ProductDelete","Product", new { id=item.ProductId },new {onclick="return confirm('確定要刪除嗎?')",style="color:red"})
            </td>
        </tr>
}
    </tbody>
</table>

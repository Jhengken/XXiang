                <label asp-for="SupplierName" class="control-label"></label>
                <input asp-for="SupplierName" class="form-control" list="Supplier" />
                @*<input name="SupplierName" type="text" class="form-control" list="Supplier" />*@
                <datalist id="Supplier">
                @foreach (var d in ViewBag.datalist){
                    <option value="@d"></option>
                }
                </datalist>
                <span asp-validation-for="SupplierName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ProductList">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
